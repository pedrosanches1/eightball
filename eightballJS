// Declaring the userName variable. User should input name here.
let userName = 'Pedro';

// Greetings to the user, depending if he inputted his name or not.
userName ? console.log(`Hello${', ' + userName + '!'}`) : console.log('Hello!');

// Declaring the userQuestion variable. User should ask the question here.
let userQuestion = 'Will I be rich one day?';

// Output should be "userName asked: + userQuestion". If userName is invalid, should be replaced by 'Stranger';
userName ? console.log(`${userName + ' asked:'} ${userQuestion}`) : console.log(`Stranger asked: ${userQuestion}`);

// Generating random number between 0 and 7.
let randomNumber = Math.floor(Math.random() * 8);

// Creating variable eightBall
let eightBall = '';

// Assigning eightBall an answer for each drawn number.
switch (randomNumber) {
  case 1:
  eightBall = 'It is certain';
  break;
case 2:
  eightBall = 'It is decidedly so';
  break;
case 3:
  eightBall = 'Reply hazy try again';
  break;
case 4:
  eightBall = 'Cannot predict now';
  break;
case 5:
  eightBall = 'Do not count on it';
  break;
case 6:
  eightBall = 'My sources say no';
  break;
case 7:
  eightBall = 'Outlook not so good';
  break;
case 8:
  eightBall = 'Signs point to yes';
  break;
  default:
  eightBall = 'Not possible to answer'
}

// Printing eightBall answer
console.log(eightBall);
